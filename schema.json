{
    "boards": {
        "$uid (group)": { // allows for quick group-based read/edit permissions.
            "$uid (board)": {
                "name": "Board Title",
                "group": "$uid (group)",
                "goal-time": 3600000,
                "start-time": 1234567890123456,
                "end-time": 1234567890123456,
                "users": {
                    "$uid (user)": true
                },
                "categories": {
                    "$uid (category)": {
                        "title": "Category Title",
                        "color": "rgb(45, 160, 80)",
                        "items": {
                            "$uid (item)":  true
                        }
                    }
                },
                "items": {
                    "$uid (item)": {
                        "text": "Thing that is important to me",
                        "deleted": true,
                        "total-time": 12300,
                        "agree": {
                            "$uid (user)": true
                        },
                        "disagree": {
                            "$uid (user)": true
                        }
                    }
                },
                "notes": {
                    "$uid (followup)": {
                        "owner": "$uid (user)",
                        "text": "note about the given item",
                        "category": "$uid (category)",
                        "item": "$uid (item)"
                    }
                }
            }
        }
    },
    // once a user is part of a group, that user can be invited to boards in that group.
    "board-invites": {
        "uid (user)": {
            "uid (group)": {
                "board": true // false if rejected
            }
        }
    },
    "groups": {
        "uid (group)": {
            "name": "Group Name",
            "boards": {
                "$uid (board)": true
            },
            "users": {
                "$uid (user)": true
            }
        }
    },
    // User requests to join a group. These are removed once a user is accepted.
    "group-join-requests": {
        "uid (link)": {
            "group": "uid (group)",
            "users": {
                "uid (user)": true // false if rejected (keep these `false` entry to prevent spamming)
            }
        }
    },
    "users": {
        "$uid (user)": {
            "name": "Jerold A.",
            "heartbeat-time": 1234567890123456,
            "boards": {
                "$uid (board)": true
            },
            "last-board": "$uid (group)"
        }
    }
}